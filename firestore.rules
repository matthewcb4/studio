/**
 * @fileoverview Firestore Security Rules for the workout application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all user-generated data
 * (custom workouts, workout logs, and sets).  The master exercise data is publicly readable.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the authenticated user can read/write their own profile.
 * - /exercises/{exerciseId}: Stores master exercise data. Publicly readable, but no one can create, update, or delete.
 * - /users/{userId}/customWorkouts/{customWorkoutId}: Stores custom workouts. Only the owning user can read/write.
 * - /users/{userId}/workoutLogs/{workoutLogId}: Stores workout logs. Only the owning user can read/write.
 * - /users/{userId}/workoutLogs/{workoutLogId}/sets/{setId}: Stores sets. Only the owning user can read/write.
 *
 * Key Security Decisions:
 * - User listing is disallowed to prevent unauthorized data access.
 * - The /exercises collection is read-only for all users.
 * - Default security posture for ambiguous relationships is strict owner-only access.
 *
 * Denormalization for Authorization:
 * - The 'userId' is stored within CustomWorkout and WorkoutLog documents to eliminate the need for `get()` calls in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile data. Only the user with the matching {userId} can read or write their profile.
     * @path /users/{userId}
     * @allow (create) - An authenticated user can create their profile if the userId matches their auth UID.
     * @allow (get, list, update, delete) - An authenticated user can read, update, or delete their profile if the userId matches their auth UID and the document exists.
     * @deny (create) - An unauthenticated user cannot create a profile.
     * @deny (get, list, update, delete) - Another authenticated user cannot read, update, or delete this profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is disabled for privacy

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id; //Immutable ID
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages the master exercise list. This collection is pre-populated and read-only for all users.
     * @path /exercises/{exerciseId}
     * @allow (get, list) - Any user can read the exercise data.
     * @deny (create, update, delete) - No user can create, update, or delete exercise data.
     * @principle Provides a public read-only dataset.
     */
    match /exercises/{exerciseId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Manages custom workout routines created by users. Only the user with the matching {userId} can read/write.
     * @path /users/{userId}/customWorkouts/{customWorkoutId}
     * @allow (create) - An authenticated user can create a custom workout if the userId matches their auth UID.
     * @allow (get, list, update, delete) - An authenticated user can read, update, or delete a custom workout if the userId matches their auth UID and the document exists.
     * @deny (create) - An unauthenticated user cannot create a custom workout.
     * @deny (get, list, update, delete) - Another authenticated user cannot read, update, or delete this custom workout.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/customWorkouts/{customWorkoutId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Immutable user ID
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages workout logs for users. Only the user with the matching {userId} can read/write.
     * @path /users/{userId}/workoutLogs/{workoutLogId}
     * @allow (create) - An authenticated user can create a workout log if the userId matches their auth UID.
     * @allow (get, list, update, delete) - An authenticated user can read, update, or delete a workout log if the userId matches their auth UID and the document exists.
     * @deny (create) - An unauthenticated user cannot create a workout log.
     * @deny (get, list, update, delete) - Another authenticated user cannot read, update, or delete this workout log.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/workoutLogs/{workoutLogId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Immutable user ID
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages sets performed during a workout.  Path-based ownership, following hierarchy.
     * @path /users/{userId}/workoutLogs/{workoutLogId}/sets/{setId}
     * @allow (create) - An authenticated user can create a set if the userId matches their auth UID.
     * @allow (get, list, update, delete) - An authenticated user can read, update, or delete a set if the userId matches their auth UID and the document exists.
     * @deny (create) - An unauthenticated user cannot create a set.
     * @deny (get, list, update, delete) - Another authenticated user cannot read, update, or delete this set.
     * @principle Enforces document ownership for writes and follows hierarchy.
     */
    match /users/{userId}/workoutLogs/{workoutLogId}/sets/{setId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}